
<div class="form-group">
	<label>Teacher Code</label>
	<input data-required="true" data-msg="Enter Code." type="text" maxlength="5" class="form-control" id="teacher_code" name="teacher_code" value="$!teacher.code"  placeholder="">
</div>

<div class="form-group">
	<label>Teacher Name</label>
	<input data-required="true" data-msg="Enter Name." type="text" class="form-control" id="teacher_name" name="teacher_name" value="$!teacher.name"  placeholder="">
</div>

<div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-primary" onclick="saveData('saveTeacher', 'data_main', 'teacher_id=$!teacher.id')">Save</button>
	<button type="button" class="btn btn-default" onclick="sendAjax('listTeachers','data_main','')">Cancel</button>

</div>