
<div class="form-group">
	<label>Venue Code</label>
	<input data-required="true" data-msg="Enter Code." type="text" maxlength="5" class="form-control" id="venue_code" name="venue_code" value="$!venue.code"  placeholder="">
</div>

<div class="form-group">
	<label>Venue Name</label>
	<input data-required="true" data-msg="Enter Name." type="text" class="form-control" id="venue_name" name="venue_name" value="$!venue.name"  placeholder="">
</div>

<div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-primary" onclick="saveData('saveVenue', 'data_main', 'venue_id=$!venue.id')">Save</button>
	<button type="button" class="btn btn-default" onclick="sendAjax('listVenues','data_main','')">Cancel</button>

</div>