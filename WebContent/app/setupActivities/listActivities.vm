<div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-success" onclick="sendAjax('addActivity', 'data_main', '')">Add New</button>
</div>

<table class="table">
	<tr>
		<th style="width:20px"></th>
		<th style="width:100px">Code</th>
		<th>Name</th>
		<th>Assigned Teacher(s)</th>
		<th>Allowed Days</th>
		<th>Allowed Periods</th>
		<th></th>
	</tr>
	#foreach ( $activity in $activities )
	<tr>
		<td>$velocityCount.</td>
		<td style="cursor:pointer" onclick="sendAjax('settings','data_main','activity_id=$!activity.id')">$!activity.code</td>
		<td>$!activity.name</td>
		<td>
			<ul>
			#foreach ( $e in $activity.assignedTeachers )
				<li>$e.name</li>
			#end
			</ul>
		</td>
		<td>
			<ul>
			#foreach ( $e in $activity.allowedDays )
				<li>$dayNameMapper.get($e)</li>
			#end
			</ul>
		</td>
		<td>
			<ul>
			#foreach ( $e in $activity.allowedPeriods )
				<li>$periodNameMapper.get($e)</li>
			#end
			</ul>
		</td>
		<td style="text-align:right">
			<div class="btn-group">
				<button type="button" class="btn btn-confirmation btn-default btn-sm"  data-toggle="modal" data-target="#confirmation" onclick="sendAjaxConfirm('Confirm', 'Are you sure to delete this Activity?', 'deleteActivity','data_main','activity_id=$!activity.id')">
					<i class="fa fa-trash-o" aria-hidden="true"></i>
				</button>
				<button type="button" class="btn btn-default btn-sm" onclick="sendAjax('settings','data_main','activity_id=$!activity.id')">
					<i class="fa fa-wrench" aria-hidden="true"></i>
				</button>				
				<button type="button" class="btn btn-default btn-sm" onclick="sendAjax('editActivity','data_main','activity_id=$!activity.id')">
					<i class="fa fa-pencil" aria-hidden="true"></i>
				</button>
			
			</div>
		</td>
	</tr>
	#end
	
</table>